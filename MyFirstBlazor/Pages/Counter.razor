@page "/counter"

<h1>Counter</h1>

<p>
    Current count:
    <span class="@backgroundColor">@currentCount</span>
</p>

<p>
    <input type="number"
           @bind="@increment"
           @onkeypress="KeyHandler"
           @onkeypress:preventDefault="true" />
</p>

<button class="btn btn-primary"
        disabled="@(currentCount >= 10)"
        @onclick="@IncrementCount">
    Click me
</button>

@code { private int currentCount = 0;
            private int increment = 1;
            string backgroundColor = "red-background";

            private void KeyHandler(KeyboardEventArgs e)
            {
                Console.WriteLine(e.Code);
                if (e.Key == "+")
                {
                    increment++;
                }
                if (e.Key == "-")
                {
                    increment--;
                }
            }

            private void IncrementCount()
            {
                currentCount += increment;

                backgroundColor = currentCount % 2 == 0 ? "red-background" : "yellow-background";
            } }